@model List<LearnerProject.Models.Entities.CourseRegister>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayi = 0;
}

<br />
<h3>Ders Kaydı</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Öğrenci Adı</th>
        <th>Kurs Adı</th>
    </tr>
    @foreach (var x in Model)
    {

        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@x.Student.NameSurname</td>
            <td>@x.Course.CourseName</td>
            <td class="text-center">
                <a href="/CourseRegister/DeleteCourseRegister/@x.CourseRegisterID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sİl</a>
                <a href="/CourseRegister/EditCourseRegister/@x.CourseRegisterID" class="btn btn-outline-success" style="margin-left:25px;"><i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/CourseRegister/AddCourseRegister" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1"><i class="fas fa-plus"></i> Yeni Ders Ekle</a>

