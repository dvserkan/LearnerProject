@model List<LearnerProject.Models.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayi = 0;
}

<br />
<h3>Kurslar</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kurs Adı</th>
        <th>Resim Url</th>
        <th>Açıklama</th>
        <th>Tutar</th>
        <th>Kategori</th>
    </tr>
    @foreach (var x in Model)
    {

        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@x.CourseName</td>
            <td>@x.ImageUrl</td>
            <td>@x.Description</td>
            <td>@x.Price.ToString("n2") ₺</td>
            <td>@x.Category.CategoryName</td>
            <td class="text-center">
                <a href="/Course/DeleteCourse/@x.CourseID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sİl</a>
                <a href="/Course/EditCourse/@x.CourseID" class="btn btn-outline-success" style="margin-left:25px;"><i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Course/AddCourse" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1"><i class="fas fa-plus"></i> Yeni Kurs Ekle</a>

