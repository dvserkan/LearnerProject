@model List<LearnerProject.Models.Entities.Classroom>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayi = 0;

}
<br />
<h3>Sınıflar</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Sınıf Adı</th>
        <th>Açıklama</th>
        <th>İcon</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var x in Model)
    {

        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@x.ClassroomName</td>
            <td>@x.Description</td>
            <td>@x.Icon</td>
            <td class="text-center">
                <a href="/Classroom/DeleteClassroom/@x.ClassroomID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sİl</a>
                <a href="/Classroom/EditClassroom/@x.ClassroomID" class="btn btn-outline-success" style="margin-left:25px;"><i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Classroom/AddClassroom" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1"><i class="fas fa-plus"></i> Yeni Sınıf Ekle</a>