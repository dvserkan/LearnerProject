@model List<LearnerProject.Models.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayi = 0;
}

<br />
<h3>Kategoriler</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var x in Model)
    {

        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@x.CategoryName</td>
            <td class="text-center">
                <a href="/Category/DeleteCategory/@x.CategoryID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sİl</a>
                <a href="/Category/EditCategory/@x.CategoryID" class="btn btn-outline-success" style="margin-left:25px;"><i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1"><i class="fas fa-plus"></i> Yeni Kategori Ekle</a>

