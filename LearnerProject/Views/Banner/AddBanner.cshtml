@model LearnerProject.Models.Entities.Banner

@{
    ViewBag.Title = "AddBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div style="margin-left:35%;margin-top:8%;">
    <br /><br /><br />
    <h4>Banner Ekleme Sayfası</h4>
