@model List<LearnerProject.Models.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayi = 0;
}

<br />
<h3>Hakkında</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Url</th>
        <th>Item 1</th>
        <th>Item 2</th>
        <th>Item 3</th>
    </tr>
    @foreach (var x in Model)
    {

        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@x.Title</td>
            <td>@x.Description</td>
            <td>@x.ImageUrl</td>
            <td>@x.Item1</td>
            <td>@x.Item2</td>
            <td>@x.Item3</td>
            <td class="text-center">
                <a href="/About/DeleteAbout/@x.AboutID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sİl</a>
                <a href="/About/EditAbout/@x.AboutID" class="btn btn-outline-success" style="margin-left:25px;"><i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/About/AddAbout" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1"><i class="fas fa-plus"></i> Yeni Hakkında Ekle</a>
